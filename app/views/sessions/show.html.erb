<div class="relative flex flex-col items-center justify-between flex-1 pb-5 bg-gray-8">
  <div class="w-full px-5 pt-6 pb-12 bg-bottom bg-no-repeat bg-cover" style="background-image: url(<%= asset_path 'background_design.svg' %>)">
    <div class="flex flex-col max-w-screen-sm mx-auto">
      <div class="flex flex-row items-center mb-4">
        <% if @speaker&.profile&.image&.attached? %>
          <div class="relative flex flex-col items-center justify-center w-12 h-12 rounded-full min-w-12 min-h-12">
            <%= image_tag url_for(@speaker.profile.image), class: "rounded-full absolute" %>
          </div>
        <% else %>
          <div class="flex flex-row items-center justify-center w-12 h-12 p-3 rounded-full min-w-12 min-h-12 bg-slate-300">
            <%= image_tag url_for("user_avatar.svg") %>
          </div>
        <% end %>

        <div class="flex flex-row items-center justify-between w-full ml-5 grow ">
          <div class="flex flex-col">
            <p class="text-base italic font-black text-red"><%= @speaker.profile.name %></p>
            <p class="font-normal text-[13px]"><%= @speaker.profile.job_title %></p>
          </div>
          <%= inline_svg_tag "icon_bookmark.svg", class: "fill-red stroke-red min-w-4 min-h-4 w-4 h-4 ml-5" %>
        </div>
      </div>
      <h1 class="text-[20px] text-black italic mb-4 font-bold mb-4"><%= @session.title %></h1>

      <div class="flex flex-row flex-wrap items-center gap-4 mb-[18px]">
        <% @session.tags.each do |tag| %>
          <div class="bg-white border border-blue-2 rounded-lg px-3 py-[6px] text-[13px] text-blue-2">
            <%= tag.name %>
          </div>
        <% end %>
      </div>

      <p class="mb-4 text-base font-medium leading-6"><%= @session.description %></p>
      <div class="flex flex-row items-center mb-3">
        <%= inline_svg_tag "calendar.svg", class: "fill-gray-4 w-3 h-3 mr-2" %> <p class="text-[13px] text-gray-4"><%= @session.starts_at.strftime("%A, %b %d") %></p>
      </div>
      <div class="flex flex-row items-center mb-3">
        <%= inline_svg_tag "clock.svg", class: "fill-gray-4 w-3 h-3 mr-2" %><p class="text-[13px] text-gray-4"><%= @session.starts_at.strftime("%H:%M") %> - <%= @session.ends_at.strftime("%H:%M") %></p>
      </div>
      <div class="flex flex-row items-center mb-3">
        <%= inline_svg_tag "location_pin.svg", class: "fill-gray-4 w-3 h-3 mr-2" %><p class="text-[13px] text-gray-4"><%= @session.location.name %></p>
      </div>
    </div>

  </div>
  <div class="flex flex-col items-center w-full p-5 mt-6">
    <div class="flex flex-col items-start max-w-screen-sm">
      <p class="text-black mb-4 text-[23px] font-bold italic">About this speaker</p>
      <div class="p-5 bg-white rounded-lg">
        <div class="flex flex-row items-center mb-4">
          <% if @speaker&.profile&.image&.attached? %>
            <div class="relative flex flex-col items-center justify-center w-12 h-12 rounded-full min-w-12 min-h-12">
              <%= image_tag url_for(@speaker.profile.image), class: "rounded-full absolute" %>
            </div>
          <% else %>
            <div class="flex flex-row items-center justify-center w-12 h-12 p-3 rounded-full bg-slate-300">
              <%= image_tag url_for("user_avatar.svg") %>
            </div>
          <% end %>
          <div class="flex flex-col ml-5">
            <p class="text-base italic font-black text-red"><%= @speaker.profile.name %></p>
            <p class="font-normal text-[13px]"><%= @speaker.profile.job_title %></p>
          </div>
        </div>
        <p class="text-base font-medium leading-5">
          <%= @speaker.profile.bio %>
        </p>
      </div>
    </div>
  </div>
</div>
