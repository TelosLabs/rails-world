<%= title "Speaker" %>

<% content_for :top_nav do %>
  <%= render partial: "layouts/secondary_top_nav" %>
<% end %>

<div class="relative flex flex-col items-center justify-between flex-1 bg-grey-50 dark:bg-[#0f171b] pt-safe-area-back-button pb-safe-area-bottom-navbar">
  <div class="w-full px-5 pt-6 pb-4 bg-bottom bg-no-repeat bg-cover">
    <div class="z-10 flex flex-col items-start max-w-screen-sm mx-auto">
      <div class="flex flex-row items-center">
        <% if @profile.image.attached? %>
          <div class="relative flex flex-col items-center justify-center w-[120px] h-[120px] bg-center bg-no-repeat bg-cover rounded-full min-w-[120px] min-h-[120px]" style="background-image: url(<%= url_for(@profile.image) %>)">
          </div>
        <% else %>
          <div class="flex flex-row items-center justify-center w-[120px] h-[120px] p-5 rounded-full min-w-[120px] min-h-[120px] bg-slate-300">
            <%= inline_svg_tag "icons/user_avatar.svg" %>
          </div>
        <% end %>

        <div class="flex flex-col items-start ml-5">
          <div class="text-2xl font-medium dark:text-[#798691]"><%= @profile.name %></div>
          <div class="text-lg text-gray-400 dark:text-[#798691]"><%= @profile.job_title %></div>
        </div>
      </div>

      <p class="mt-6 text-lg font-medium dark:text-[#798691]"><%= @profile.bio %></p>
      <div class="flex flex-row items-center justify-center w-full gap-4 mt-6">
        <%= link_to(
          @profile.github_url,
          target: "_blank",
          class: [
            "flex flex-row grow items-center justify-center w-28 h-14 rounded-lg",
            "bg-red dark:bg-[#182027]": @profile.github_url.present?,
            "bg-grey-300 cursor-not-allowed dark:bg-[#131b21]": @profile.github_url.blank?
          ]
        ) do %>
          <img src="<%= asset_path 'github.svg' %>" alt="github" class="w-6 h-6">
        <% end %>

        <%= link_to(
          @profile.twitter_url,
          target: "_blank",
          class: [
            "flex flex-row grow items-center justify-center w-28 h-14 rounded-lg",
            "bg-red dark:bg-[#182027]": @profile.twitter_url.present?,
            "bg-grey-300 cursor-not-allowed dark:bg-[#131b21]": @profile.twitter_url.blank?
          ]
        ) do %>
          <img src="<%= asset_path 'twitter.svg' %>" alt="twitter" class="w-6 h-6">
        <% end %>

        <%= link_to(
          @profile.linkedin_url,
          target: "_blank",
          class: [
            "flex flex-row grow items-center justify-center w-28 h-14 rounded-lg",
            "bg-red dark:bg-[#182027]": @profile.linkedin_url.present?,
            "bg-grey-300 cursor-not-allowed dark:bg-[#131b21]": @profile.linkedin_url.blank?
          ]
        ) do %>
          <img src="<%= asset_path 'linkedin.svg' %>" alt="linkedin" class="w-6 h-6 fill-[#798691]">
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex flex-col items-center w-full p-5">
    <div class="flex flex-col items-start w-full max-w-screen-sm gap-4">
      <h2 class="text-2xl italic font-bold dark:text-white">Sessions by this speaker</h2>
      <% @sessions.each do |session| %>
        <%= render(
          partial: "sessions/card",
          locals: {
            session: session,
            user_is_an_attendee: Current.user&.sessions&.include?(session)
          }
        ) %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :bottom_nav do %>
  <%= render partial: "layouts/bottom_navbar", locals: { unread_notifications: current_user&.notifications&.unread } %>
<% end %>
