<%= title "Notifications" %>

<% content_for :top_nav do %>
  <%= render partial: "layouts/primary_top_nav" %>
<% end %>

<div class="flex flex-col items-center flex-1 px-5 pt-safe-area-header pb-safe-area-bottom-navbar bg-grey-50 dark:bg-[#0f171b]">
  <div class="flex flex-col items-start w-full h-full pt-6 max-w-screen-sm dark:text-lightcolor">
    <h1 class="text-3xl italic font-bold text-gray-800 d-hotwire-native-none dark:text-lightcolor">Notifications</h1>
    <% if @notifications.present? %>
      <div class="flex flex-col items-start flex-1 w-full">
        <div class="flex flex-col w-full mt-6 gap-4">
          <%= render partial: "notification", collection: @notifications, as: :notification %>
        </div>

        <% if @pagy.pages > 1 %>
          <div class="flex justify-center w-full mt-8">
            <%== pagy_nav(@pagy) %>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col items-start w-full p-4">
        <div class="flex flex-col items-center w-full mt-10 mb-10">
          <%= link_to(
            'Notification settings', notification_settings_path,
            class: "text-red dark:text-dark-theme-red font-bold  text-center rounded-sm underline italic text-lg"
          ) %>
        </div>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center w-full h-full gap-6">
        <div class="flex items-center justify-center w-32 h-32 bg-white rounded-full dark:bg-[#182027]">
          <%= inline_svg_tag "icons/bell.svg", size: "56", class: "fill-gray-400" %>
        </div>
        <p class="text-base font-bold text-center">You donâ€™t have <br> any notifications</p>
        <%= link_to(
          'Notification settings', notification_settings_path,
          class: "text-red dark:text-dark-theme-red font-bold  text-center rounded-sm underline italic text-lg"
        ) %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :bottom_nav do %>
  <%= render partial: "layouts/bottom_navbar", locals: { unread_notifications: current_user&.notifications&.unread } %>
<% end %>
