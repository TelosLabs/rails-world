<div class="sticky bottom-0 flex flex-row items-center justify-center gap-6 bg-white py-1 border-t border-b border-gray-7 text-[11px]">
  <a href="<%= sessions_path %>" class="<%= nav_text_class_for [sessions_path] %> flex flex-col items-center">
    <%= inline_svg_tag "calendar.svg", class: nav_icon_class_for([sessions_path]) %>
    Agenda
  </a>
  <a href="<%= root_path %>" class="<%= nav_text_class_for [root_path] %> flex flex-col items-center justify-center">
    <%= inline_svg_tag "clock.svg", class: nav_icon_class_for([root_path]) %>
    My Schedule
  </a>
  <a href="<%= profile_path(current_profile&.uuid) %>" class="<%= nav_text_class_for [profile_path(current_profile&.uuid), edit_profile_path(current_profile&.uuid)] %> flex flex-col items-center justify-center">
    <%= inline_svg_tag "avatar_no_fill.svg", class: nav_icon_class_for([profile_path(current_profile&.uuid), edit_profile_path(current_profile&.uuid)]) %>
    Profile
  </a>
  <a href="<%= notifications_path %>" class="<%= nav_text_class_for [notifications_path, notifications_settings_path] %> flex flex-col items-center justify-center">
    <%= inline_svg_tag "bell.svg", class: nav_icon_class_for([notifications_path, notifications_settings_path]) %>
    Notifications
  </a>
  <a href="<%= about_path %>" class="<%= nav_text_class_for [about_path] %> flex flex-col items-center justify-center">
    <%= inline_svg_tag "info.svg", class: nav_icon_class_for([about_path]) %>
    About
  </a>
</div>
